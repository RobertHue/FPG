{
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "editor.rulers": [80,120],
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true
    },
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
}
