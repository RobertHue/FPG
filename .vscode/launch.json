{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PyDebug: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [],
            "justMyCode": true
        },
        {
            "name": "PyDebug: Main File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [],
            "justMyCode": true
        },
        {
            "name": "PyTest: Current File",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "module": "pytest",
            "args": ["tests/"],
            "cwd": "${workspaceRoot}",
        }
    ]
}
